@if(News != null && SteamApplication != null) 
{
    <MudPaper id=@("News" + _componentName)
        Elevation="6"
          Class=@("py-8 px-4 overflow-y-scroll rounded-lg news-container animate__animated animate__slideInRight " + Class)>
        <MudContainer Fixed="true" Style="max-height: fit-content;">
            <MudStack Spacing="6">
                <MudStack Spacing="0">
                    <MudStack Row="true">
                        <MudText Typo="Typo.h5">@SteamApplication.AppName</MudText>
                        <MudSpacer />
                        <MudButton Href="@News.Url" target="_blank" rel="noopener noreferrer" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.OpenInNew" Color="Color.Info">
                            <MudText Typo="Typo.body1">Open original</MudText>
                        </MudButton>
                    </MudStack>
                    <MudText Typo="Typo.body1">
                        @News.Author
                    </MudText>
                    <MudText Typo="Typo.body1">@News.Date</MudText>
                </MudStack>
                <MudDivider DividerType="DividerType.FullWidth" Class="my-2" />
                <MudStack Spacing="4" AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h4" Align="Align.Center">@News.Title</MudText>
                </MudStack>
                <MudContainer Fixed="true" Class=@("px-0 news-container" + Class) Style="overflow:auto;word-wrap: break-word;">
                    <MudMarkdown 
                        Value="@News.Contents" 
                        CodeBlockTheme="CodeBlockTheme.AtomOneDarkReasonable"
                        OverrideHeaderTypo="@(e => Typo.h5)" />
                </MudContainer>
            </MudStack>
        </MudContainer>
    </MudPaper>
}
<style>
    img {
        display: block;
        width: auto;
        height: auto;
        max-width: 100%;
    }

    .news-container {
        transition: opacity cubic-bezier(.4, 0, .2, 1) 0.35s;
        max-height: calc(100vh - 275px);
    }

    .visible-news {
        opacity: 1;
    }

    .hidden-news {
        opacity: 0;
    }

    .animate__animated.animate__slideInRight {
        --animate-duration: 0.35s
    }
</style>
