@if(News != null && SteamApplication != null) 
{
    <MudPaper id=@("News" + _componentName)
        Elevation="6"
        Class=@("py-8 px-4 overflow-y-scroll rounded-lg news-container " + Class) >
        <MudContainer Fixed="true" Style="max-height: fit-content;">
            <MudStack Spacing="6">
                <MudStack Spacing="0">
                    <MudStack Row="true">
                        <MudText Typo="Typo.h5">@SteamApplication.AppName</MudText>
                        <MudSpacer />
                        <MudText Typo="Typo.h6" Align="Align.End">@News.Date</MudText>
                    </MudStack>
                    <MudText Typo="Typo.caption">
                        @News.Author
                    </MudText>
                </MudStack>
                <MudStack Spacing="4" AlignItems="AlignItems.Center">
                    <MudButton Href="@News.Url" target="_blank" rel="noopener noreferrer" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Link" Color="Color.Info">
                        <MudText Typo="Typo.h6">@News.Title</MudText>
                    </MudButton>
                </MudStack>
                <MudDivider DividerType="DividerType.Middle" Class="my-2" />
                <MudContainer Fixed="true" Class=@("px-0 news-container" + Class) Style="overflow:auto;word-wrap: break-word;">
                    <MudMarkdown 
                        Value="@News.Contents" 
                        CodeBlockTheme="CodeBlockTheme.AtomOneDarkReasonable"
                        OverrideHeaderTypo="@(e => Typo.h5)" />
                </MudContainer>
            </MudStack>
        </MudContainer>
    </MudPaper>
}
<style>
    img {
        display: block;
        width: auto;
        height: auto;
        max-width: 100%;
    }

    .news-container {
        background-color: @Colors.Grey.Darken4;
        transition: opacity cubic-bezier(.4, 0, .2, 1) 0.35s;
        max-height: calc(100vh - 275px);
    }

    .visible-news {
        opacity: 1;
    }

    .hidden-news {
        opacity: 0;
    }
</style>
